<div class="row">
  <div class="col-sm-4">
    <div class="shopper-info">
      <p>Address Information</p>
<%= form_for @address do |f| %>
  <%= f.label :name %><br><%= f.text_field :name %><br>
  <%= f.label :address_1 %><br><%= f.text_area :address_1 %><br>
  <%= f.label :address_2 %><br><%= f.text_area :address_2 %><br>
  <%= f.label :city %><br><%= f.text_field :city %><br>
  <%= f.label :country %><br><%= f.text_field :country %><br>
  <%= f.label :state %><br><%= f.text_field :state %><br>
  <%= f.label :zipcode %><br><%= f.text_field :zipcode %><br>
  <%= button_tag 'Submit', {class:'btn btn-primary'}%>
<% end %>
</div>
</div>
</div>